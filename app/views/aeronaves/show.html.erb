<p style="color: green"><%= notice %></p>

<div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
  <div class="flex justify-start items-center relative overflow-hidden bg-white dark:bg-gray-800 sm:rounded-lg">
    <%= link_to aeronaves_path do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15m0 0l6.75 6.75M4.5 12l6.75-6.75" />
      </svg>
    <% end %>
    <div class="p-4 space-y-3 sm:flex sm:space-y-0 sm:space-x-4">
      <h5 class="mr-3 font-semibold dark:text-white">Detalle aeronave</h5>
    </div>
  </div>

  <%= render @aeronave %>

  <% if @operaciones.empty? %>
    <p class="mt-10">
      No hay operaciones registradas para esta aeronave.
    </p>
  <% else %>
    <%= render "historico_vuelos" %>
  <% end %>
</div>


