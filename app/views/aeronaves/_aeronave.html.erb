<div id="<%= dom_id aeronave %>" class="bg-white overflow-hidden shadow rounded-lg mt-3 p-5">
  <div class="flex flex-col gap-4">
    <dl class="flex flex-row items-center justify-start gap-40">
      <dt class="w-40 font-semibold leading-none text-gray-900 md:w-48 dark:text-white">
        Matricula
      </dt>
      <dd class="font-light text-gray-500 dark:text-gray-400">
        <%= aeronave.matricula %>
      </dd>
    </dl>

    <dl class="flex flex-row items-center justify-start gap-40">
      <dt class="w-40 font-semibold leading-none text-gray-900 md:w-48 dark:text-white">
        Modelo
      </dt>
      <dd class="font-light text-gray-500 dark:text-gray-400">
        <%= aeronave.modelo %>
      </dd>
    </dl>

    <dl class="flex flex-row items-center justify-start gap-40">
      <dt class="w-40 font-semibold leading-none text-gray-900 md:w-48 dark:text-white">
        Horas vuelo acumulado
      </dt>
      <dd class="font-light text-gray-500 dark:text-gray-400">
        <%= aeronave.horas_vuelo_acumulado %>
      </dd>
    </dl>

    <dl class="flex flex-row items-center justify-start gap-40">
      <dt class="w-40 font-semibold leading-none text-gray-900 md:w-48 dark:text-white">
        Horas vuelo desde última revisión
      </dt>
      <dd class="font-light text-gray-500 dark:text-gray-400">
        <%= aeronave.horas_vuelo_mantencion %>
      </dd>
    </dl>

    <dl class="flex flex-row items-center justify-start gap-40">
      <dt class="w-40 font-semibold leading-none text-gray-900 md:w-48 dark:text-white">
        Cantidad de mantenciones totales
      </dt>
      <dd class="font-light text-gray-500 dark:text-gray-400">
        <%= aeronave.mantencion_total %>
      </dd>
    </dl>

  </div>

</div>
